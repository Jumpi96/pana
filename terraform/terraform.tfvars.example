# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values
# Never commit terraform.tfvars to git!

# Supabase database SESSION POOLER connection URL (required for IPv4 from Lambda)
# Get from: Supabase Dashboard → Settings → Database → Session pooler (port 6543)
# IMPORTANT: Use Session mode (6543), NOT Transaction mode (6543)
# Format: postgres://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
supabase_db_url = "postgres://postgres.xxxxx:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres"

# Email address for backup failure alerts
alert_email = "your-email@example.com"

# Optional: AWS region (default: us-east-1)
# aws_region = "us-east-1"

# Optional: Backup retention in days (default: 30)
# backup_retention_days = 30

# Optional: Backup schedule (default: weekly)
# backup_schedule = "rate(7 days)"
# Examples:
#   - "rate(1 day)" for daily
#   - "cron(0 2 * * ? *)" for 2 AM UTC daily
#   - "rate(12 hours)" for twice daily
